<div class="card col-sm-5 mx-auto mt-5">
  <div class="card-body">
    <h3>パスワードの変更</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.label :password, "新規パスワード (%s文字以上)"%@minimum_password_length, :class => "form-label" %>
      <%= f.password_field :password, autofocus: true, :class => "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "もう一度パスワードを入力してください", :class => "form-label" %><br />
      <%= f.password_field :password_confirmation, :class => "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更する", :class => "btn btn-primary btn-block" %>
    </div>
    <% end %>
</div>

